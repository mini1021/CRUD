@model HW.Models.BookList


<form action="" method="post" class="form-horizontal" name="send">
    <input type="hidden" name="bookId" value="@Model.bookId">
    <div class="row">
        <h1 class="col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 page_title ">Edit</h1>
    </div>
    <div class="form-group">
        <label for="bookName" class="col-sm-3 control-label">BookName：</label>
        <div class="col-sm-8">
            <div class="input-group">
                <input type="text" class="form-control" name="bookName" placeholder="請輸入書名" value="@Model.bookName">

            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="episode" class="col-sm-3 control-label">No：</label>
        <div class="col-sm-8">
            <div class="input-group">
                <input type="text" class="form-control" name="episode" placeholder="請輸入集數" value="@Model.episode">

            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3 col-md-offset-3 col-xs-12">

            <button type="submit" class="btn btn-default btn-block">
                <b>&nbsp&nbsp送出&nbsp&nbsp</b>
                <span class="glyphicon glyphicon-arrow-right" style="color:green"></span>
            </button>
        </div>
    </div>
</form>